<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="500.0" prefWidth="645.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vutbr.feec.fpga.controllers.EncryptionDecryptionContentController">
    <center>
        <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <TextArea fx:id="textAreaEncryptDecryptInput" layoutX="84.0" layoutY="151.0" prefHeight="41.0" prefWidth="477.0" promptText="Drag and Drop or Paste Data Here" />
                <TextArea fx:id="textAreaEncryptDecryptOutput" layoutX="85.0" layoutY="312.0" prefHeight="35.0" prefWidth="476.0" promptText="Output from FPGA" />
                <Button fx:id="takeInputDataAndEncrypt" layoutX="96.0" layoutY="263.0" mnemonicParsing="false" onAction="#handleAESEncryption" prefHeight="25.0" prefWidth="191.0" text="Encryption" />
