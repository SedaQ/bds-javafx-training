                <TextArea fx:id="logTextArea" layoutX="117.0" layoutY="375.0" prefHeight="94.0" prefWidth="412.0" promptText="App log" />
            <Button fx:id="chooseInputFile" layoutX="265.0" layoutY="204.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="122.0" text="Choose File" />
            <TextArea fx:id="textAreaEncryptionKey" layoutX="84.0" layoutY="39.0" prefHeight="31.0" prefWidth="477.0" promptText="Add encryption key" />
            <Button fx:id="chooseEncryptionKey" layoutX="254.0" layoutY="93.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="145.0" text="Choose encryption key" />
            </children>
        </Pane>
    </center>
